{
  "name": "px-to-rem-converter",
  "displayName": "px-to-rem",
  "publisher": "HemendraKhatik",
  "description": "Convert px values to rem in your code with configurable root font size",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.40.0"
  },
  "keywords": [
    "px",
    "rem",
    "px to rem",
    "rem converter",
    "css converter",
    "px converter",
    "unit converter",
    "responsive design",
    "responsive units",
    "vscode extension",
    "vscode",
    "px2rem",
    "rem units",
    "frontend",
    "web development",
    "tailwind",
    "sass",
    "scss",
    "less",
    "html",
    "style",
    "visual studio code"
  ],
  "categories": [
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onCommand:px-to-rem.convert"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "px-to-rem.convert",
        "title": "Convert px to rem"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "px-to-rem.convert",
          "when": "editorHasSelection && editorLangId =~ /css|scss|less|javascript|typescript|html|plaintext/",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "PX to REM Settings",
      "properties": {
        "px-to-rem.baseFontSize": {
          "type": "number",
          "default": 16,
          "description": "Base font size for px to rem conversion"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HemendraKhatik/px-to-rem"
  }
}
